APP_NAME=Expotur
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database - Use environment variables or managed services
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=expoturs_prod
DB_USERNAME=expoturs_user
DB_PASSWORD=change_me_in_production

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Cache (optional: use Redis in production)
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Mail (configure for your email service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@expotur.com
MAIL_FROM_NAME="${APP_NAME}"
